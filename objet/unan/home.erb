<%
# Page d'accueil de l'utilisateur dans Un An Un Script

enable_comments
%>
<%
def partial name
  Vue.new("#{name}.erb", SuperFile.new('./objet/unan/home')).output
end
%>
<%=
  case true
  when user.admin?          then partial 'admin'
  when user.unanunscript?   then partial 'auteur_unan'
  when user.suscribed?      then partial 'suscriber'
  when user.identified?     then partial 'simple_inscrit'
  else                           partial 'unsigned'
  end
%>

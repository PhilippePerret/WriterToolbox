<%
#
# NOTE Cette vue sert aussi bien à l'inscription au site qu'à
#      l'inscription au programme UN AN UN SCRIPT.
#
signup_for_unanunscript = site.current_route.route == "unan/paiement"
%>
<%
# Formulaire d'inscription par défaut

# Fabrication de la rangée de formulaire
def row libelle, property, field_type, values = nil
  field_name  = "user[#{property}]"
  field_id    = "user_#{property}"
  c = ""
  c << libelle.in_span(class: 'libelle')
  c << case field_type
  when :text
    (self.send(property)||"").in_input_text(name:field_name, id:field_id)
  when :select
    values.in_select(name:field_name, id: field_id, selected: user.send(property))
  end.in_span(class: 'value')
  c.in_div(class:'row')
end

%>
<%
site.require 'form_tools'
form.prefix = 'user'
%>
<form id="form_user_signup" class="dim3070" action="<%= signup_for_unanunscript ? 'unan' : 'user' %>/create" method="POST">
  <%= (param(:route_after_signup)||param(:ras)||"").in_hidden(name:'route_after_signup') %>
  <%= form.field_text("Pseudo", 'pseudo', nil, {class:'milong'}) %>
  <%= form.field_text("Patronyme", 'patronyme', nil, {class:'milong'}) %>
  <%= form.field_select("Vous êtes…", 'sexe', nil, {values: [["F", "une femme"], ["H", "un homme"]]}) %>
  <%= form.field_text("Mail", 'mail', nil, {class:'milong', confirmation:true}) %>
  <%= form.field_text("Mot de passe", 'password', nil, {class:'milong', confirmation:true}) %>
  <% if signup_for_unanunscript %>
    <%= form.field_checkbox("S'abonner au programme UN AN UN SCRIPT", 'subscribe', 'on') %>
  <% else %>
    <%= form.field_checkbox("S'abonner au site"+" (pour #{site.tarif_humain}/an)".in_span(class:'small'), 'subscribe', nil, {text_after: "(Pourquoi s'abonner ?)".in_a(href:'aide/why_subscribe', target:'_blank', class:'small')}) %>
  <% end %>
  <%= form.field_text("Test anti-robot", 'captcha', nil, {class:'short', text_before: "Nombre de jours dans une année bisextile : ".in_span(class:'small')}) %>
  <%= "S'inscrire".in_submit(class:'btn').in_div(class:'buttons') %>
</form>

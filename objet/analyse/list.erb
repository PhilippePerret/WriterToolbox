<%
# Vue de la liste des analyses
#
# Ouvert à tout visiteur même non identifié ou non abonné.
%>

<%
def user_autorized?
  user.subscribed? || user.analyste? || user.admin?
end
%>

<%= FilmAnalyse::titre_h1("Films analysés") %>
<% if user_autorized? %>
  <%= FilmAnalyse::liste_all_analyses(completed:true) %>
  <%= FilmAnalyse::liste_all_analyses(not_completed:true) %>
<% else %>
  <%= FilmAnalyse::liste_analyses_autorized %>
  <%= FilmAnalyse::liste_analyses_non_autorized %>
<% end %>

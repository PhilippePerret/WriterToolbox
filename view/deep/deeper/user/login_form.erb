<%
# Formulaire d'identification
%>
<%
# Il y a peut-être une redirection demandée après l'identification
# Elle se trouve soit dans param(:backto) soit dans param(:login)[:back_to]
# si une première soumission a déjà eu lieu.
backto =
  if param(:backto) != nil
    param(:backto)
  elsif param(:login) != nil
    param(:login)[:back_to]
  else
    ""
  end
%>
<form id="form_user_login" action="user/login" method="POST">
  <div class="content"><%# ça définit le style %>
    <input type="text" id="login_mail" name="login[mail]" placeholder="Votre mail" value="" />
    <input type="password" id="login_password" name="login[password]" placeholder="Votre code secret" value="" />
    <input type="hidden" name="login[back_to]" value="<%= backto %>">
    <div class='submit'>
      <div id="login_ulinks">
        <span>&nbsp;</span>
        <span class='ulink'><a href="user/signup">S'inscrire</a></span>
        <span> </span>
        <span class='ulink'><a href="user/retreive_password">Code oublié</a></span>
        <span> </span>
      </div>
      <input type="submit" value="OK" onclick="return $.proxy(User,'check_login')()" />
      <span>&nbsp;</span>
    </div>
  </div>
</form>
